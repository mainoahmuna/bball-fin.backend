datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        String   @id @default(uuid())
  name      String
  position  String
  teamId    Int?
  team      Team?    @relation(fields: [teamId], references: [id])
  createdAt DateTime @default(now())
}

model Team {
  id       Int      @id @default(autoincrement())
  name     String
  city     String
  players  Player[]
}